<div class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-fullscreen-sm-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'proprietaire.detail'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>{{ 'proprietaire.nom'|trans }}:</b> {{ proprietaire.nom }}
                    </li>
                    <li class="list-group-item">
                        <b>{{ 'proprietaire.prenom'|trans }}:</b> {{ proprietaire.prenom }}
                    </li>
                    {% for possession in proprietaire.possessions %}
                        <li class="list-group-item">
                            <b>{{ 'appartement.nom'|trans }}:</b> {{ possession.appartement.absoluteName }}
                        </li>
                        <li class="list-group-item">
                            <b>{{ 'proprietaire.beginAt'|trans }}:</b> {{ possession.beginAt|date }}
                        </li>
                    {% endfor %}
                    {% for garage in proprietaire.garages %}
                        <li class="list-group-item d-flex gap-2 align-items-center">
                            <b>{{ 'garage.nav'|trans }}:</b> {{ garage.nom }}
                            {{ include('_components/badge.html.twig', {
                                content: ('garage.dateAchat'|trans) ~ ': ' ~ (garage.dateAchat|date)
                            }) }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ 'close'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>