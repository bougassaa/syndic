<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('tom-select/tom-select.min.css') }}">
            <link rel="stylesheet" href="{{ asset('font-awesome/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('app.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-md bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="fa-solid fa-home"></i> {{ 'syndic'|trans }}
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {{ app.current_route starts with 'app_proprietaire' ? 'active' : '' }}"
                               href="{{ path('app_proprietaire_list') }}">
                                {{ 'proprietaire.nav'|trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container pt-4">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('bootstrap/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('tom-select/tom-select.min.js') }}"></script>
            <script src="{{ asset('app.js') }}"></script>
        {% endblock %}
    </body>
</html>
