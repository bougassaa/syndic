{% extends 'base.html.twig' %}

{% block title %}
    {{ 'appartement.list'|trans }}
{% endblock %}

{% block body %}
    <div class="d-flex align-items-center flex-wrap">
        <h2 class="flex-fill">{{ 'appartement.list'|trans }}</h2>
        <a href="{{ path('app_appartement_new') }}" class="btn btn-primary" >{{ 'appartement.new'|trans }}</a>
    </div>
    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'appartement.nom'|trans }}</th>
                    <th>{{ 'proprietaire.nav'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for appartement in appartements %}
                <tr>
                    <th>{{ appartement.absoluteName(false) }}</th>
                    <td>
                        {% if appartement.lastProprietaire is not null %}
                            {% include 'proprietaire/_display-name.html.twig' with {'proprietaire': appartement.lastProprietaire} %}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}