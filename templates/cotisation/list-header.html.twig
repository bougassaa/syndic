<div class="d-flex align-items-center flex-wrap">
    <h2 class="flex-fill">{{ 'cotisation.list'|trans }}</h2>
    <a href="{{ path('app_cotisation_new') }}" class="btn btn-primary" >{{ 'cotisation.new'|trans }}</a>
</div>
<div class="bg-white position-sticky py-2 mb-md-1 z-1" style="top: var(--filter-list-top)">
    <form action="{{ path('app_cotisation_list') }}"
          method="get"
          class="list-filter-form d-flex flex-wrap gap-2 align-items-center"
    >
        {% include '_components/filter-periode.html.twig' %}
        <select class="form-select-sm no-search"
                name="filterBatiment"
                data-select-no-search="true"
                data-select-allow-empty="true"
                data-select-label="{{ 'cotisation.filter-batiment'|trans }} :&nbsp;"
        >
            <option value="" {% if batimentSelected == false %}selected{% endif %}>
                {{ 'cotisation.filter-batiment-all'|trans }}
            </option>
            {% for batiment in batimentsFilter %}
                <option value="{{ batiment.id }}" {% if batiment.id == batimentSelected %}selected{% endif %}>{{ batiment.nom }}</option>
            {% endfor %}
        </select>
    </form>
</div>