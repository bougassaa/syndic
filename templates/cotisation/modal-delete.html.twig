<div class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-fullscreen-sm-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'cotisation.delete'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% for cotisation in cotisations %}
                    <div>
                        <a class="btn btn-link" href="{{ path('app_cotisation_delete', {'cotisation': cotisation.id}) }}">
                            {{ 'cotisation.delete-of'|trans({'%date%': cotisation.paidAt|date, '%montant%': cotisation.montant|format_currency('MAD')}) }}
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ 'close'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>